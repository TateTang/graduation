<!--index.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd">
    <view class="weui-cells__title">进入小程序</view>

    <form bindsubmit='formSubmit' bindreset='formReset'>
    <view class="weui-cells weui-cells_after-title">
      
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">{{mold}}</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="account" placeholder="{{moldname}}" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="name" placeholder="请输入姓名" />
        </view>
      </view>
    </view>
    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio" wx:for="{{items}}" wx:key="{{items}}">
        <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
      </label>
    </radio-group>
      <input name="openid"  style='display:none'></input>
      <input name="roleobj"  style='display:none'></input>
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary"  form-type='submit' >确定</button>
    </view>
      </form>
  </view>
</view>